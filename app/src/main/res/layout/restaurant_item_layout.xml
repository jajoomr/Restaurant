<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_restaurant_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold"
        android:text="@string/dummy_name"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/tv_cuisine_type_label"
        app:layout_constraintTop_toBottomOf="@id/tv_restaurant_name"
        app:layout_constraintStart_toStartOf="@id/tv_restaurant_name"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/cuisine_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/tv_cusine_type_value"
        app:layout_constraintTop_toTopOf="@id/tv_cuisine_type_label"
        app:layout_constraintStart_toEndOf="@id/tv_cuisine_type_label"
        android:text="@string/dummy_name"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    
    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cuisine_type_label"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/design_default_color_primary_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>
</androidx.constraintlayout.widget.ConstraintLayout>